<h2>Queues</h2>
<h3>Overview</h3>

<div class="no-padding">
  <table id="queueList" class="table">
    <thead>
      <th>Host</th>
      <th>Name</th>
      <th>Waiting</th>
      <th>Active</th>
      <th>Failed</th>
      <th>Delayed</th>
    </thead>
    <tbody>
      {{#each queues}}
        <tr>
          <td>{{ this.hostId }}</td>
          <td><a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">{{ this.name }}</a></td>
          <td>{{ this.jobCounts.waiting }}</td>
          <td>{{ this.jobCounts.active }}</td>
          <td>{{ this.jobCounts.failed }}</td>
          <td>{{ this.jobCounts.delayed }}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
  <li><a href="/logout">Logout</a></li>
{{/contentFor}}

{{#contentFor 'script'}}
  new Tablesort(document.getElementById('queueList'));
{{/contentFor}}
